<h1>ログイン画面</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <%= f.label :email, 'Email' %>
  <%= f.email_field :email %>
  
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>
  
  <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
<%end%>
<%= link_to '新規登録の方はこちらから登録', signup_path %>